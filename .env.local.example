# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Firebase Configuration (Optional - for user authentication)
# If you don't need user auth, these can be left empty and the app will work without Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin SDK (Optional - for server-side Firebase operations)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_BASE64=
FIREBASE_CLIENT_EMAIL=

# Backend API URL (Update if backend runs on different port)
NEXT_PUBLIC_API_URL=http://localhost:3000